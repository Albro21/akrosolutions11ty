---
layout: page.njk
title: "{{ projectsDetail[projectKey].title }}"
metaTitle: "{{ projectsDetail[projectKey].metaTitle or 'AKRO Solutions â€” ' + projectsDetail[projectKey].title }}"
metaDescription: "{{ projectsDetail[projectKey].metaDescription or 'Professional BIM services for ' + projectsDetail[projectKey].title + ' across the UK and Europe.' }}"
metaKeywords: "{{ projectsDetail[projectKey].metaKeywords or 'BIM, ' + projectsDetail[projectKey].title + ', BIM modeling, LOD, Revit, BIM coordination' }}"
---

<!-- Page Content -->
<main class="pt-28 pb-20">
  <!-- Hero -->
  <section class="max-w-7xl mx-auto px-6">
    <a href="/projects" class="inline-flex items-center gap-2 text-akro-3 hover:scale-105 transition-transform mb-6">
      <i class="fa-solid fa-arrow-left"></i>
      <span class="font-semibold">Back to Projects</span>
    </a>

    <h1 class="text-4xl font-bold text-gray-50 mb-4">{{ projectsDetail[projectKey].title }}</h1>
    <p class="text-gray-400 text-lg">
      {{ projectsDetail[projectKey].location }} &nbsp;|&nbsp; {{ projectsDetail[projectKey].power }} &nbsp;|&nbsp; {{ projectsDetail[projectKey].area }}
    </p>

    <!-- Slideshow Container -->
    <div class="relative mt-8 rounded-2xl overflow-hidden shadow-2xl slideshow-container h-96">
      {% for image in projectsDetail[projectKey].slideshow %}
      <img src="./assets/images/projects/{{ projectKey }}/{{ image }}" alt="{{ projectsDetail[projectKey].title }} - Image {{ loop.index }}" class="absolute w-full h-full object-cover transition-opacity duration-500 slideshow-image {% if loop.first %}opacity-100{% else %}opacity-0{% endif %}">
      {% endfor %}

      <!-- Navigation Buttons -->
      <button data-slideshow-prev class="absolute left-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-left"></i>
      </button>
      <button data-slideshow-next class="absolute right-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-right"></i>
      </button>

      <!-- Dots Indicator -->
      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2">
        {% for image in projectsDetail[projectKey].slideshow %}
        <button class="slideshow-dot w-3 h-3 rounded-full {% if loop.first %}bg-akro-2{% else %}bg-akro-3{% endif %} transition-all cursor-pointer"></button>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <div class="bg-gray-900 rounded-2xl p-8 shadow-xl text-gray-300 leading-relaxed space-y-4">
      {% for paragraph in projectsDetail[projectKey].description %}
      <p>{{ paragraph | safe }}</p>
      {% endfor %}
    </div>
  </section>

  <!-- BIM Scopes -->
  {% if projectsDetail[projectKey].stage5 %}
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <div class="bg-gray-900 rounded-2xl p-8 shadow-xl">
      <h2 class="text-3xl font-semibold text-gray-50 mb-6">Stage 5 BIM Scope</h2>

      <div class="space-y-6 text-gray-300">
        <!-- Stage 5 Packages -->
        <div class="space-y-3">
          {% for package in projectsDetail[projectKey].stage5.packages %}
          <div class="flex items-start gap-3">
            <i class="fa-solid fa-check-circle text-akro-3 mt-1"></i>
            <p><span class="font-semibold text-gray-50">{{ package.title }}</span>{% if package.description %} ({{ package.description }}){% endif %}</p>
          </div>
          {% endfor %}
        </div>

        {% if projectsDetail[projectKey].stage5.additional %}
        <!-- Additional Services -->
        <div class="pt-4 border-t border-gray-700">
          <p class="text-gray-400">
            <span class="font-semibold text-gray-50">Additional Services:</span> {{ projectsDetail[projectKey].stage5.additional }}
          </p>
        </div>
        {% endif %}
      </div>
    </div>
  </section>
  {% endif %}

  {% if projectsDetail[projectKey].stage6 %}
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <div class="bg-gray-900 rounded-2xl p-8 shadow-xl">
      <h2 class="text-3xl font-semibold text-gray-50 mb-6">Stage 6 BIM Scope</h2>

      <div class="space-y-6 text-gray-300">
        <div class="space-y-3">
          {% for package in projectsDetail[projectKey].stage6.packages %}
          <div class="flex items-start gap-3">
            <i class="fa-solid fa-check-circle text-akro-3 mt-1"></i>
            <p><span class="font-semibold text-gray-50">{{ package.title }}</span></p>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Technical Specifications -->
  {% if projectsDetail[projectKey].specifications %}
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <div class="bg-gray-900 rounded-2xl p-8 shadow-xl">
      <h2 class="text-3xl font-semibold text-gray-50 mb-6">Technical Specifications</h2>

      <div class="grid md:grid-cols-2 gap-6 text-gray-300">
        {% for spec in projectsDetail[projectKey].specifications %}
        <div class="space-y-3">
          {% for item in spec %}
          <div class="flex items-start gap-3">
            <i class="fa-solid {{ item.icon }} text-akro-3 mt-1"></i>
            <div>
              <p class="font-semibold text-gray-50">{{ item.title }}</p>
              <p>{{ item.value }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Gallery -->
  {% if projectsDetail[projectKey].gallery %}
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <h2 class="text-3xl font-semibold text-gray-50 mb-6">Image Gallery</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for image in projectsDetail[projectKey].gallery %}
      <img src="./assets/images/projects/{{ projectKey }}/{{ image }}" alt="{{ projectsDetail[projectKey].title }} - Gallery Image {{ loop.index }}" class="rounded-xl shadow-lg object-cover h-64 w-full cursor-pointer hover:scale-105 transition-transform duration-300" onclick="openImageModal(this.src)">
      {% endfor %}
    </div>
  </section>
  {% endif %}

  <!-- Image Modal -->
  <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center p-4" onclick="closeImageModal()">
    <button class="absolute top-4 right-4 text-white text-4xl hover:text-akro-3 transition-colors">&times;</button>
    <img id="modalImage" class="max-w-full max-h-full object-contain rounded-lg" onclick="event.stopPropagation()">
  </div>
</main>