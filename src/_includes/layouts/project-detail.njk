---
layout: page.njk
---

<main class="pt-28 pb-20">
  <!-- Hero -->
  <section class="max-w-7xl mx-auto px-6">
    <a href="/projects" class="inline-flex items-center gap-2 text-akro-3 hover:scale-105 transition-transform mb-6">
      <i class="fa-solid fa-arrow-left"></i>
      <span class="font-semibold">Back to Projects</span>
    </a>

    <h1 class="text-4xl font-bold text-gray-50 mb-4">{{ title }}</h1>
    <p class="text-gray-400 text-lg">
      {{ location }} &nbsp;|&nbsp; {{ power }} &nbsp;|&nbsp; {{ area }}
    </p>

    <!-- Slideshow -->
    <div class="relative mt-8 rounded-2xl overflow-hidden shadow-2xl slideshow-container h-96">
      {% for image in images %}
        <img src="/assets/images/projects/{{ page.fileSlug }}/{{ image }}" alt="{{ title }} - Image {{ loop.index }}" class="absolute w-full h-full object-cover transition-opacity duration-500 slideshow-image {% if loop.first %}opacity-100{% else %}opacity-0{% endif %}">
      {% endfor %}

      <button data-slideshow-prev class="absolute left-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-left"></i>
      </button>
      <button data-slideshow-next class="absolute right-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-right"></i>
      </button>

      <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2">
        {% for image in images %}
          <button class="slideshow-dot w-3 h-3 rounded-full {% if loop.first %}bg-akro-2{% else %}bg-akro-3{% endif %} transition-all cursor-pointer"></button>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <div class="bg-gray-900 rounded-2xl p-8 shadow-xl text-gray-300 leading-relaxed space-y-4">
      {% for paragraph in description %}
        <p>{{ paragraph | safe }}</p>
      {% endfor %}
    </div>
  </section>

  <!-- Additional content from the page itself -->
  {{ content | safe }}

  <!-- Gallery -->
  <section class="max-w-7xl mx-auto px-6 mt-14">
    <h2 class="text-3xl font-semibold text-gray-50 mb-6">Image Gallery</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for image in images %}
        <img src="/assets/images/projects/{{ page.fileSlug }}/{{ image }}" alt="{{ title }} - Gallery Image {{ loop.index }}" class="rounded-xl shadow-lg object-cover h-64 w-full cursor-pointer hover:scale-105 transition-transform duration-300" onclick="openImageModal(this.src)">
      {% endfor %}
    </div>
  </section>

  <!-- Image Modal -->
  <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center p-4" onclick="closeImageModal()">
    <button class="absolute top-4 right-4 text-white text-4xl hover:text-akro-3 transition-colors">&times;</button>
    <img id="modalImage" class="max-w-full max-h-full object-contain rounded-lg" onclick="event.stopPropagation()">
  </div>
</main>