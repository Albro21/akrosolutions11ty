---
layout: page.njk
---

<main class="pt-28 pb-20">
  <!-- Hero Section -->
  <section class="pb-12 px-6 bg-gray-950">
    <div class="max-w-7xl mx-auto">
      <a href="/services" class="inline-flex items-center gap-2 text-akro-2 hover:scale-105 transition-transform mb-6">
        <i class="fa-solid fa-arrow-left"></i>
        <span class="font-semibold">Back to Services</span>
      </a>
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-50 mb-4">{{ title }}</h1>
        {% if headline %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          {{ headline }}
        </p>
        {% endif %}
      </div>

      <!-- Slideshow -->
      <div class="relative slideshow-container max-w-4xl mx-auto mb-12">
        <div class="relative h-96 md:h-[500px] rounded-2xl overflow-hidden shadow-2xl">
          {% for image in images %}
          <img src="/assets/images/services/{{ page.fileSlug }}/{{ image }}" alt="{{ title }} - Image {{ loop.index }}" class="absolute w-full h-full object-cover transition-opacity duration-500 slideshow-image {% if loop.first %}opacity-100{% else %}opacity-0{% endif %}">
          {% endfor %}
        </div>
        <!-- Navigation Buttons -->
        <button data-slideshow-prev class="absolute left-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
          <i class="fa-solid fa-chevron-left text-lg"></i>
        </button>
        <button data-slideshow-next class="absolute right-4 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-3 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
          <i class="fa-solid fa-chevron-right text-lg"></i>
        </button>
        <!-- Dots Indicator -->
        <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2">
          {% for image in images %}
          <button class="slideshow-dot w-3 h-3 rounded-full {% if loop.first %}bg-akro-2{% else %}bg-akro-3{% endif %} transition-all cursor-pointer"></button>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Description -->
  <section class="py-20 px-6 bg-gray-900">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-gray-50">What is {{ title }}?</h2>
          {% for paragraph in description %}
          <p class="text-gray-300 leading-relaxed">{{ paragraph | safe }}</p>
          {% endfor %}
        </div>
        {% if benefits %}
        <div class="space-y-6">
          <h3 class="text-2xl font-semibold text-gray-50">Key Benefits</h3>
          <ul class="space-y-3 text-gray-300">
            {% for benefit in benefits %}
            <li class="flex items-start gap-3">
              <i class="fa-solid fa-check-circle text-akro-2 mt-1"></i>
              <span>{{ benefit }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      </div>
    </div>
  </section>

  <!-- Services Included -->
  {% if services %}
  <section class="py-20 px-6 bg-gray-950">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-center text-gray-50 mb-12">Our {{ title }} Services</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for service in services %}
        <div class="bg-gray-900 rounded-xl p-6 border border-gray-800 hover:border-akro-2 transition-colors">
          <div class="text-akro-2 mb-4">
            <i class="fa-solid {{ service.icon }} text-3xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-50 mb-3">{{ service.title }}</h3>
          <p class="text-gray-300">{{ service.description }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Contact CTA -->
  {% if cta %}
  <section class="py-20 px-6 bg-gray-900">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-50 mb-6">{{ cta.title }}</h2>
      <p class="text-gray-300 mb-8 text-lg">
        {{ cta.description }}
      </p>
      <a href="/contact" class="inline-block px-8 py-4 bg-akro-2 text-gray-950 font-semibold rounded-xl hover:opacity-80 transition-opacity">
        Get Started <i class="fa-solid fa-arrow-right ml-2"></i>
      </a>
    </div>
  </section>
  {% endif %}
</main>