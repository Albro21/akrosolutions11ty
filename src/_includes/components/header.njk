<header class="bg-gray-950/60 fixed w-full z-50 backdrop-blur-md {% if page.url == "/" %}animate-slide-down{% endif %}">
  <!-- Desktop -->
  <nav class="mx-auto flex max-w-7xl items-center justify-between py-4 px-6 lg:px-8">
    <div class="flex lg:flex-1">
      <a href="/" class="flex gap-3">
        <img src="/assets/images/logo.png" alt="AKRO Solutions Logo" class="h-6 sm:h-9">
