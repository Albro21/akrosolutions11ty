<div class="bg-gray-900 rounded-2xl overflow-hidden shadow-lg hover:scale-105 transition-transform duration-500">
  <!-- Slideshow -->
  <div class="relative slideshow-container" data-autoplay="false">
    <div class="relative h-60">
      {% for image in project.images %}
        <img src="./assets/images/projects/{{ project.link | replace('.html', '') }}/{{ image }}" class="absolute w-full h-full object-cover transition-opacity duration-500 slideshow-image {% if loop.first %}opacity-100{% else %}opacity-0{% endif %}">
      {% endfor %}
    </div>
    
    {% if project.images | length > 1 %}
      <!-- Navigation Buttons -->
      <button data-slideshow-prev class="absolute left-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-2 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-left text-sm"></i>
      </button>
      <button data-slideshow-next class="absolute right-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-2 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-right text-sm"></i>
      </button>
      
      <!-- Dots Indicator -->
      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-1.5">
        {% for image in project.images %}
          <button class="slideshow-dot w-2 h-2 rounded-full {% if loop.first %}bg-akro-2{% else %}bg-akro-3{% endif %} transition-all cursor-pointer"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <!-- Content -->
  <div class="p-6 space-y-3 text-gray-200">
    <h3 class="text-2xl font-semibold text-gray-50">{{ project.title | safe }}</h3>
    <p><i class="fa-solid fa-location-dot text-akro-3"></i> {{ project.location }}</p>
    {% for detail in project.details %}
      <p><i class="fa-solid fa-{% if 'Power' in detail %}bolt{% elif 'Rooms' in detail %}bed{% else %}up-down-left-right{% endif %} text-akro-3"></i> {{ detail }}</p>
    {% endfor %}
    <!-- Button -->
    <a href="./{{ project.link }}" class="mt-4 w-full py-3 rounded-full text-lg font-bold text-white text-center block btn-blue">
      Learn More
    </a>
  </div>
</div>