<div class="bg-gray-900 rounded-2xl overflow-hidden shadow-lg border border-gray-800 hover:scale-105 transition-transform duration-500 flex flex-col h-full">
  <!-- Slideshow -->
  <div class="relative slideshow-container" data-autoplay="false">
    <div class="relative h-60">
      {% for image in service.images %}
        <img src="/assets/images/services/{{ service.link | replace('.html', '') }}/{{ image }}" class="absolute w-full h-full object-cover transition-opacity duration-500 slideshow-image {% if loop.first %}opacity-100{% else %}opacity-0{% endif %}" alt="{{ service.title }} {{ loop.index }}">
      {% endfor %}
    </div>

    {% if service.images | length > 1 %}
      <!-- Navigation Buttons -->
      <button data-slideshow-prev class="absolute left-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-2 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-left text-sm"></i>
      </button>
      <button data-slideshow-next class="absolute right-2 top-1/2 -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white p-2 rounded-full transition-all hover:scale-110 z-10 cursor-pointer">
        <i class="fa-solid fa-chevron-right text-sm"></i>
      </button>

      <!-- Dots Indicator -->
      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-1.5">
        {% for image in service.images %}
          <button class="slideshow-dot w-2 h-2 rounded-full {% if loop.first %}bg-akro-2{% else %}bg-akro-3{% endif %} transition-all cursor-pointer"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <div class="p-6 space-y-3 text-gray-200 flex flex-col h-full">
    <h3 class="text-2xl font-semibold text-gray-50">{{ service.title }}</h3>
    <p>{{ service.description }}</p>
    <div class="grow"></div>
    <a href="{{ service.link }}" class="w-full py-3 rounded-full text-lg font-bold text-white text-center btn-right">Learn More</a>
  </div>
</div>